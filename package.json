{
  "name": "horologium",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "husky"
  },
  "workspaces": [
    "apps/*",
    "configs/*",
    "packages/*"
  ],
  "devDependencies": {
    "@horologium-config/eslint-config": "workspace:*",
    "@horologium-config/lint-staged": "workspace:*",
    "@horologium-config/typescript": "workspace:*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^1.13.0"
  },
  "engines": {
    "node": ">=20.12"
  },
  "packageManager": "yarn@4.1.1"
}
